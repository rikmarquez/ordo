{
  "name": "ordo",
  "version": "1.0.0",
  "description": "Individual Restaurant Management System - PWA personalizada por restaurante",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "seed": "tsx prisma/seed.ts",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules apps/*/.next"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.10.0",
    "prisma": "^5.7.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "bcryptjs": "^3.0.2",
    "tsx": "^4.20.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/ordo.git"
  },
  "keywords": [
    "restaurant",
    "pwa",
    "nextjs",
    "prisma",
    "railway",
    "trpc",
    "restaurant-management",
    "mexican-restaurants"
  ],
  "author": "Your Name",
  "license": "MIT"
}
